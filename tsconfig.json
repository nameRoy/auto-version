{
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "Node",
        "module": "ESNext",
        "baseUrl": "./",
        "paths": {
            "*": ["types/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "ESNext",
        }
    }
}